
DISTNAME = $(pkgname)-$(pkgversion)
INSTALL = install
INSTALL_PROGRAM = $(INSTALL) -m 755
INSTALL_SCRIPT = $(INSTALL) -m 755
INSTALL_DATA = $(INSTALL) -m 644
INSTALL_DIR = $(INSTALL) -d -m 755
SHELL = /bin/sh
CAN_RUN_INSTALLINFO = $(SHELL) -c "install-info --version" > /dev/null 2>&1

objs = buffer.o carg_parser.o global.o io.o main.o main_loop.o regex.o signal.o


# Software
all : $(progname) r$(progname)

$(progname) : $(objs)
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $(objs)

r$(progname) : r$(progname).in
	cat $(VPATH)/r$(progname).in > $@
	chmod a+x $@

main.o : main.cpp
	$(CC) $(CPPFLAGS) $(CFLAGS) -DPROGVERSION=\"$(pkgversion)\" -c -o $@ $<

%.o : %.c
	$(CC) $(CPPFLAGS) $(CFLAGS) -c -o $@ $<

%.o : %.cpp
	$(CC) $(CPPFLAGS) $(CFLAGS) -c -o $@ $<

$(objs)       : Makefile ed.h
carg_parser.o : carg_parser.h
main.o        : carg_parser.h

# Documentation
doc : info man

info : $(VPATH)/doc/$(pkgname).info

$(VPATH)/doc/$(pkgname).info : $(VPATH)/doc/$(pkgname).texi
	cd $(VPATH)/doc && makeinfo $(pkgname).texi

man : $(VPATH)/doc/$(progname).1

$(VPATH)/doc/$(progname).1 : $(progname)
	help2man -n 'line-oriented text editor' -o $@ ./$(progname)

# Testing
check : all
	@$(VPATH)/testsuite/check.sh $(VPATH)/testsuite $(pkgversion)

# Linting
lint : lint-main lint-main-loop

lint-main : main.cpp
	clang-tidy --checks='modernize*, readability*, cppcoreguidelines*, bugprone*' main.cpp

lint-main-loop : main_loop.cpp
	clang-tidy --checks='modernize*, readability*, cppcoreguidelines*, bugprone*' main_loop.cpp

# Clean
clean :
	-rm -f $(progname) r$(progname) $(objs)

configclean : clean
	-rm -f Makefile config.status
